<div class="row green_outline_hover">
  <div class="col-md-6 green_outline_hover">
    <h1 class="green_outline_hover margin_test">Listing projects</h1>
  </div>
  
  <div class="col-md-6 green_outline_hover margin_test">
    <div id="projects_new_link" class="form-group project_margin_headline pull-right">
      <%= link_to 'New Project', new_project_path, class: "btn btn-primary", remote: true %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12 green_outline_hover">
    <table id="projects_table_list" class="table table-striped table-condensed table-hover">
      <tr>
        <th>Projects</th>
        <th></th>
        <th></th>
      </tr>

    <% @projects.each do |project| %>
      <tr id="<%= project.id %>">
        <%= render partial: "project_table_row", locals: {project: project} %>
      </tr>
    <% end %>

    </table>
  </div>
</div>
