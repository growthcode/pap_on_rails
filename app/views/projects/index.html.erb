<div class="row">
  <div class="col-md-6">
    <h1 class="table_headline_and_create">Listing projects</h1>
  </div>
  
  <div class="col-md-6 table_headline_and_create">
    <div id="projects_new_link" class="form-group zero_margin_headline pull-right">
      <%= link_to 'New Project', new_project_path, class: "btn btn-primary btn-lg", remote: true %>
    </div>
  </div>
</div>

<br />

<div class="row">
  <div class="col-md-12">
    <table id="projects_table_list" class="table table-striped table-condensed table-hover table-responsive">
      <thead>
        <tr>
          <th>Projects</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody data-sort-url="<%= sort_projects_path %>" id="projects_sortable">
        <% @projects.each do |project| %>
        <tr id="project_<%= project.id %>">
          <%= render partial: "project_table_row", locals: {project: project} %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

